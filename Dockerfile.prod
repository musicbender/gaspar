FROM arm64v8/ruby
# RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs
RUN mkdir /app
WORKDIR /app
COPY ./Gemfile .
COPY ./Gemfile.lock .
RUN bundle install

COPY ./scripts/entrypoint.sh /usr/bin/
RUN chmod +x /usr/bin/entrypoint.sh
COPY ./ .

ENTRYPOINT ["entrypoint.sh"]

EXPOSE 3000

CMD ["rails", "s"]